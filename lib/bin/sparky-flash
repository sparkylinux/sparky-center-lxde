#!/bin/bash

# This script checks and run the flash-player-properties 
# if it is installed
# Created by Pawe≈Ç "pavroo' Pijanowski 2015/07/16
# Copyright 2015, 2016 under the GNU GPL2 License
# Last update 2016/06/11

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-center-lxde"
if [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

DIALOG="yad --window-icon=flash-player-properties --width=450 --height=200 --center"
TITLE="--always-print-result --dialog-sep --image=flash-player-properties --title="
TITLETEXT="$LOCAL17"
MSGBOX=" --button=Ok:0 "
TEXT="--text="

if [ -f /usr/share/applications/flash-player-properties.desktop ]; then
	flash-player-properties
	exit 0
else
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL18"
	exit 0
fi

